import sqlite3
import time
import datetime
import random

#Basic SQLITE3 structure
#Database in webdev-biotool for managing pmids and scraped webpages
conn = sqlite3.connect(database='example.db') #connect to database
c = conn.cursor() #cursor

#Create table
def create_table():
	c.execute('''CREATE TABLE IF NOT EXISTS example
		(post_id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT, 
		datestamp TEXT, 
		pmids TEXT, 
		title TEXT,
		author TEXT,
		journal TEXT,
		url TEXT)''')

create_table() 






